<?xml version="1.0" encoding="utf-8"?><!--已督办-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ll"
        android:layout_alignBottom="@+id/ll"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/bg_bottom_corner" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="27dp"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <LinearLayout
            style="@style/hor_ll"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="12dp">

            <TextView
                style="@style/text.12_07090D"
                android:text="站点编号：" />

            <TextView
                android:id="@+id/tv_stcd"
                style="@style/text.12_000000"
                android:layout_marginLeft="3dp"
                tools:text="2019736788" />
        </LinearLayout>

        <LinearLayout
            style="@style/hor_ll"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="5dp">

            <TextView
                style="@style/text.12_07090D"
                android:text="报警单号：" />

            <TextView
                android:id="@+id/tv_orderCode"
                style="@style/text.12_000000"
                android:layout_marginLeft="3dp"
                tools:text="2019736788" />
        </LinearLayout>

        <LinearLayout
            style="@style/hor_ll"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="5dp">

            <TextView
                style="@style/text.12_07090D"
                android:text="报警时间：" />

            <TextView
                android:id="@+id/tv_sendTime"
                style="@style/text.12_000000"
                android:layout_marginLeft="3dp"
                tools:text="2019736788" />
        </LinearLayout>

        <View
            style="@style/line"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="10dp" />

        <LinearLayout
            style="@style/hor_ll"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="5dp">

            <TextView
                style="@style/text.12_333333"
                android:layout_weight="1"
                android:text="报警转故障" />

            <TextView
                android:id="@+id/tv_faultTime"
                style="@style/text.12_333333"
                tools:text="时间：2018/08/08 14:00" />
        </LinearLayout>

        <View
            style="@style/line"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/tv_supervised"
            style="@style/text.15_000000"
            android:layout_marginTop="15dp"
            android:drawableLeft="@mipmap/check_transparent"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:text="已督办"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_handleDes"
            style="@style/text.supervised_content"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@mipmap/icon_gzwjc"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="故障未解除，运维企业不能提交反馈信息"
            android:textColor="#999999"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_query"
            style="@style/btn.supervised"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:text="站点详情" />
    </LinearLayout>

</RelativeLayout>