<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingTop="15dp"
        android:paddingRight="12dp"
        android:paddingBottom="15dp">

        <com.flyco.tablayout.SegmentTabLayout
            android:id="@+id/tl_1"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            tl:tl_bar_color="@color/color_EAEFF9"
            tl:tl_indicator_anim_enable="true"
            tl:tl_indicator_bounce_enable="false"
            tl:tl_indicator_color="@color/color_4DB07A"
            tl:tl_indicator_corner_radius="13dp"
            tl:tl_tab_padding="20dp"
            tl:tl_textSelectColor="@color/white"
            tl:tl_textUnselectColor="@color/color_5C626E"
            tl:tl_textsize="13sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@mipmap/add_more"
            android:drawablePadding="5dp"
            android:gravity="right"
            android:text="本季"
            android:textColor="@color/color_4EB17B"
            android:textSize="12sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/corner_bg_3_grey"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="@drawable/bg_top_corner"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text.title"
                    android:text="行政区划" />

                <TextView
                    style="@style/text.title"
                    android:text="站点总数" />

                <TextView
                    style="@style/text.title"
                    android:text="达标站点数" />

                <TextView
                    style="@style/text.title"
                    android:text="水质达标率" />
            </LinearLayout>

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/layout_swipe_refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="1dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </android.support.v4.widget.SwipeRefreshLayout>
        </LinearLayout>
    </FrameLayout>


</LinearLayout>