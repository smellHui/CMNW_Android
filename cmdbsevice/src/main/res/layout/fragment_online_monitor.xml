<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data></data>

    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- The main content view -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/fl_map_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <include layout="@layout/fl_search_content"/>
            <include
                android:id="@+id/lo_search"

                layout="@layout/layout_search" />

            <include
                android:id="@+id/lo_map_opt_layer"
                layout="@layout/layout_map_opt_layer" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/lo_bt_search"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/bg_search"
                    android:gravity="center"
                    android:minWidth="40dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/iv_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add_black_24dp" />
                </LinearLayout>
            </RelativeLayout>

        </FrameLayout>

        <!-- The navigation drawer -->
        <include
            android:id="@+id/lo_right"
            layout="@layout/layout_map_rightview_select" />
    </android.support.v4.widget.DrawerLayout>


</layout>
