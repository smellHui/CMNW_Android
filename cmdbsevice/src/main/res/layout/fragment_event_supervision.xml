<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theam_red">

        <include layout="@layout/toolbar" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theam_red">

        <com.flyco.tablayout.SegmentTabLayout
            android:id="@+id/tl_1"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            tl:tl_bar_color="@color/theam_red"
            tl:tl_indicator_color="@color/white"
            tl:tl_indicator_corner_radius="8dp"
            tl:tl_tab_padding="20dp"
            tl:tl_textSelectColor="@color/color_4FB97E"
            tl:tl_textUnselectColor="@color/white" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <com.tepia.cmdbsevice.view.cmdbmain.eventsupervision.view.CountShowView
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1" />

        <com.tepia.cmdbsevice.view.cmdbmain.eventsupervision.view.CountShowView
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="1" />
    </LinearLayout>

    <com.tepia.cmdbsevice.view.cmdbmain.eventsupervision.view.RealTimeSuperView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10" />

    <com.tepia.cmdbsevice.view.cmdbmain.eventsupervision.view.TownshipStatisticsView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />


</LinearLayout>