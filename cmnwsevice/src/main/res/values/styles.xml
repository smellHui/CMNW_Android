<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LastTimeView">

    </style>

    <style name="ver_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="hor_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="hor_ll.action">
        <item name="android:layout_height">44dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="hor_ll.edit">
        <item name="android:background">@drawable/grey_round</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="ver_ll.confirm">
        <item name="android:background">@color/white</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="ver_ll.edit_6">
        <item name="android:background">@drawable/grey_round_6</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text.actionTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_333333</item>
    </style>

    <style name="text.orderTitle" parent="text.actionTitle">
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="text.actionContent">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="text.editTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="text.editContent">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_AAAAAA</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableRight">@mipmap/tbxq_icn_pulldown</item>
    </style>

    <style name="btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="btn.tip">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_corner</item>
    </style>

    <style name="btn.supter">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_corner</item>
    </style>

    <style name="btn.small">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_corner</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--改变TextInputLayout 里面的EditText默认下划线和点击时下划线的颜色-->
    <style name="TextAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/chartreuse</item><!--默认显示下划线的颜色-->
        <!--<item name="colorControlActivated">@color/orangered</item>&lt;!&ndash;点击后下划线的颜色&ndash;&gt;-->
        <!--<item name="colorAccent">@color/ivory</item>-->
    </style>

</resources>
