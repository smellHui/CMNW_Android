<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/theam_red">

        <include layout="@layout/toolbar" />

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/ly_tab"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_gravity="center"
            tl:tl_iconHeight="23dp"
            tl:tl_iconWidth="23dp"
            tl:tl_indicator_color="@color/color_F3D760"
            tl:tl_indicator_height="1dp"
            tl:tl_textSelectColor="@color/color_F3D760"
            tl:tl_textUnselectColor="@color/white"
            tl:tl_textsize="12sp"
            tl:tl_underline_height="0dp" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
