<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F7">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="181dp"
            android:contentDescription="TODO"
            android:scaleType="fitXY"
            android:src="@color/theam_red" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/toolbar" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/mine_white_round"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginStart="94dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="15dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="张三"
                            android:textColor="#333333"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:textSize="18sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="企业名称"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:layout_marginTop="5dp"
                            android:textSize="14sp"
                            android:textColor="#666666"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_event_list"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <include layout="@layout/mine_event_item"/>
                        <include layout="@layout/mine_event_item"/>
                        <include layout="@layout/mine_event_item"/>
                        <include layout="@layout/mine_event_item"/>
                        <include layout="@layout/mine_event_item"/>
                    </LinearLayout>
                </LinearLayout>

                <com.tepia.cmnwsevice.view.setting.view.CircleImageView
                    android:id="@+id/iv_user"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_marginStart="16dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/white"
                    android:src="@mipmap/tag_role_manager" />
            </RelativeLayout>
            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="14dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <include layout="@layout/mine_setting_item"/>
                    <include layout="@layout/mine_setting_item"/>
                    <include layout="@layout/mine_setting_item"/>
                    <include layout="@layout/mine_setting_item"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:text="退出登陆"
                        android:textSize="15sp"
                        android:textColor="#FF0000"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:background="@color/white"
                        />
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </LinearLayout>
    </FrameLayout>
</android.support.constraint.ConstraintLayout>