<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle" >

            <!-- 填充的颜色 -->
            <solid android:color="@color/theme_trans" />
            <stroke android:color="@color/white"/>
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="@dimen/loginradius" />

            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding
                android:bottom="@dimen/same_btn_padding"
                android:left="@dimen/same_btn_padding"
                android:right="@dimen/same_btn_padding"
                android:top="@dimen/same_btn_padding" />
        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle" >
            <!-- 填充的颜色 -->
            <solid android:color="@color/white" />
            <stroke android:color="@color/colorPrimary"
                android:width="2dp"
                />

            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="@dimen/loginradius" />

            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding
                android:bottom="@dimen/same_btn_padding"
                android:left="@dimen/same_btn_padding"
                android:right="@dimen/same_btn_padding"
                android:top="@dimen/same_btn_padding" />
        </shape>
    </item>

</selector>